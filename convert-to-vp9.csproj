<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net6.0</TargetFramework>
    <RootNamespace>convert_to_vp9</RootNamespace>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <IncludeAllContentForSelfExtract>true</IncludeAllContentForSelfExtract>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="FFMpegCore" Version="4.7.0" />
    <PackageReference Include="Goblinfactory.ProgressBar" Version="1.0.0" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="ffmpeg.exe" CopyToOutputDirectory="PreserveNewest" />
    <Content Include="ffprobe.exe" CopyToOutputDirectory="PreserveNewest" />
  </ItemGroup>
</Project>
